<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:id="@+id/patient_userimage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="4dp"
        android:id="@+id/patient_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/patient_userimage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginStart="4dp"
        android:id="@+id/patient_diagnosis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diagnosis"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/patient_userimage"
        app:layout_constraintTop_toBottomOf="@+id/patient_username" />

</androidx.constraintlayout.widget.ConstraintLayout>