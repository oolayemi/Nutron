<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stylet.nutronx.Activities.AddNewPatient">


        <TextView
            android:id="@+id/appointment_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:textAlignment="center"
            android:fontFamily="sans-serif-black"
            android:paddingTop="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="Add Patient"
            app:layout_constraintTop_toTopOf="parent" />


        <!--<TextView
            android:layout_marginStart="16dp"
            android:id="@+id/pickdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick a Date.\nSet an Appointment."
            android:textColor="#000"
            android:textSize="28dp"

            android:fontFamily="serif-monospace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_toolbar" />-->


        <EditText
            android:layout_marginStart="16dp"
            android:id="@+id/appointmentwith"
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:hint="Patient username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_toolbar" />



        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/datePicker"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_date"
            android:ems="17"
            android:focusable="false"
            android:hint="Enter Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointmentwith"/>






        <EditText
            android:layout_marginTop="8dp"
            android:id="@+id/timePicker"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_clock"
            android:ems="17"
            android:focusable="false"
            android:hint="Enter Time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"/>


        <EditText
            android:id="@+id/editText"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timePicker"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:text="Create Appointment"
            android:textAllCaps="false"
            android:textColor="#FFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintVertical_bias="1.0" />



</androidx.constraintlayout.widget.ConstraintLayout>
